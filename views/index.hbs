<div class="container col-8">
    <a href="/restaurants/new">新增餐廳</a>
    <!-- search bar -->
    <div class="container search-bar col-6" style="display: inline-block;">
        <div class="search-bar-outer">
            <div class="search-bar-inner">
                <form action="/search">
                    <h4 class="mb-2">尋找餐廳：</h4>
                    <div class="input-group">
                        <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                        <div class="input-group-append">
                            <button class="btn btn-major" type="submit" id="search-button"><i
                                    class="fas fa-search">搜尋</i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-2" style="display: inline-block;">
        <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                data-bs-toggle="dropdown" aria-expanded="false">
                {{#if sort includeZero=true}}
                {{sort}}
                {{else}}
                排序
                {{/if}}
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item" href="/sort/asc">A -> Z</a></li>
                <li><a class="dropdown-item" href="/sort/desc">Z -> A</a></li>
                <li><a class="dropdown-item" href="/sort/rating">評分</a></li>
                <li><a class="dropdown-item" href="/sort/category">類別</a></li>
                <li><a class="dropdown-item" href="/sort/location">地區</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="row row-cols-sm-3">
                {{#each restaurant}}
                <div class="text-secondary">
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>
                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i>{{this.category}}
                            </div>
                            <span class="badge badge-pill badge-danger font-weight-normal">
                                <p style="color: black;">{{this.rating}}</p>
                                <i class="fas fa-star fa-xs"></i>
                            </span>
                        </div>
                    </div>
                    <div style=" text-align: right; padding-bottom: 25%;">
                        <a href="/restaurants/{{ this._id }}">detail</a>
                        <a href="/restaurants/{{ this._id }}/edit">edit</a>
                        <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST"
                            style="display: inline;">
                            <button type="submit">delete</button>
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>